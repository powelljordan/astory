<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <ImageView
            android:clickable="true"
            android:id="@+id/happy"
            android:src="@mipmap/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="30dp"
            android:id="@+id/happyCount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <ImageView
            android:clickable="true"
            android:id="@+id/sad"
            android:src="@mipmap/sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="30dp"
            android:id="@+id/sadCount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <ImageView
            android:clickable="true"
            android:id="@+id/mad"
            android:src="@mipmap/mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="30dp"
            android:id="@+id/madCount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <ImageView
            android:clickable="true"
            android:id="@+id/surprised"
            android:src="@mipmap/surprised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="30dp"
            android:id="@+id/surprisedCount"/>
    </LinearLayout>

</LinearLayout>